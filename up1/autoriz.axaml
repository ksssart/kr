<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="230"
        MaxHeight="230"
        MaxWidth="300"
        x:Class="up1.autoriz"
        Title="АВТОРИЗАЦИЯ">
    
   
    
    <Grid>
        <Image Source="D:/apps/pic/kir2.png" Width="300" Height="230"/>  
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"> 
        <TextBlock Margin = "80 -50 0 0" FontSize="20" FontWeight="Bold">Авторизация</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Margin = "10 10 0 0">Пароль:</TextBlock>
                <TextBox Name="password" x:CompileBindings="False" Text="{Binding password}" Width="200" Height="15" Margin = "10 0 0 0"></TextBox>
            </StackPanel>
    <StackPanel Orientation="Horizontal">
        <Button Name="back" Content="     Назад" Background="RosyBrown" Click="Back" Width="100" Height="50" Margin = "20 20 0 0"></Button>
        <Button Name="come" Content="     Войти" Background="RosyBrown" Click="login" Width="100" Height="50" Margin = "20 20 0 0"></Button>
   </StackPanel>
    
    </StackPanel>
        
    </Grid>   
</Window>
