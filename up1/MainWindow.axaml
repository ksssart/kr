<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        MaxHeight="230"
        MaxWidth="500"
        x:Class="up1.MainWindow"
        Title="ООО 'Бастион' ">
        <Grid Background="Orange">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Здравствуйте, вас приветствует ООО 'Бастион'" FontSize="20" FontWeight="Bold" Margin="7,-80,0,0"/>
              <TextBlock Text="Желаете просмотреть доступные данные или авторизоваться?" FontWeight="Bold" FontSize="14" Margin="15,-50,0,10"/>
        </StackPanel>
    
        <StackPanel Orientation="Horizontal">              
                        <Button Name="see" Content="Просмотр данных"  FontWeight="Bold" Background="White" Click="See" Width="150" Height="50" Margin = "30 50 0 10"></Button>
                        <Button Name="autoriz" Content="  Авторизоваться"  FontWeight="Bold" Background="White" Click="Autoriz" Width="150" Height="50" Margin = "140 50 0 10"></Button>
         </StackPanel>     
    </Grid>
</Window>
